{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": [
			"dom",
			"esnext.asynciterable",
			"es2019"
		],
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist",
		"strict": true
	},
	"include": [
		"pem/*.pem",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}